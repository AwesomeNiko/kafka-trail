{
  "name": "@awesomeniko/kafka-trail",
  "version": "0.1.1",
  "description": "A Node.js library for managing message queue with Kafka",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Kafka",
    "Kafkajs",
    "Message queue",
    "Service",
    "Microservice",
    "Producer",
    "Consumer",
    "Typescript",
    "Nodejs"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Nikolai Terskikh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AwesomeNiko/kafka-trail.git"
  },
  "scripts": {
    "lint": "yarn lint:check",
    "lint:check": "yarn typecheck && eslint --max-warnings 0 --format stylish \"./**/*.ts{,x}\"",
    "lint:fix": "eslint --fix --max-warnings 0 --format stylish \"./**/*.ts{,x}\"",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.unit.json --forceExit",
    "test:int": "node --env-file-if-exists=.env --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.int.json --forceExit",
    "start": "NODE_PATH=./dist node --enable-source-maps dist/test-run.js",
    "build": "rimraf dist && tsc -P tsconfig.build.json",
    "dev": "npm run build && npm run start"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.46.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.49.1",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-node": "0.51.1",
    "@opentelemetry/semantic-conventions": "^1.22.0",
    "kafkajs": "^2.2.4",
    "lz4": "^0.6.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/lz4": "^0.6.4",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "8.24.1",
    "@typescript-eslint/parser": "8.24.1",
    "eslint": "9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "typescript": "5.7.3"
  },
  "resolutions": {
    "prettier": "^3.2.4"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}

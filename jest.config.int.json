{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "verbose": true,
  "collectCoverage": false,
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "moduleFileExtensions": ["js", "json", "node", "ts"],
  "testRegex": [
    "__tests__/.*\\.int\\..*\\.ts$"
  ]
}

